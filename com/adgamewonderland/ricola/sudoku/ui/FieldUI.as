import com.adgamewonderland.ricola.sudoku.ui.BoexliUI;import com.adgamewonderland.aldi.sudoku.beans.Content;/** * @author gerd */class com.adgamewonderland.ricola.sudoku.ui.FieldUI extends com.adgamewonderland.aldi.sudoku.ui.FieldUI {		private var boexli_mc:BoexliUI;		/**	 * konstruktor	 * erweitert den originalen konstruktor, um das verhalten als button zu deaktivieren	 * @override	 */	 public function FieldUI() {	 	super();		// button deaktivieren		//this.enabled = false;	 }	 	 /**	  * keine aktion bei klick	  * @override	  */	 public function onRelease():Void 	 {	 }	 	 /**	  * effekt bei roll over nur, wenn content vorhanden	  */	  public function onRollOver():Void	  {	  	// stoppen, wenn kein content	  	if (getField().getContent() == Content.CONTENT_EMPTY) {	  		gotoAndStop("_up");		  	}	  }	 	 /**	  * zeigt den content auf der buehne an	  * ueberschreibt die originale methode, um an stelle einer ziffer ein boexli anzuzeigen	  * @override	  * @param content inhalt des field	  * @param color farbe, in der das boexli eingefaerbt werden soll	  */		private function showContent(content:Content, color:Number ):Void		{			// interval, da sofortiges anzeigen nicht funktioniert			var interval:Number;			// funktion zum anzeigen			var doShow:Function = function(boexli_mc:BoexliUI ):Void			{				// boexli anzeigen				boexli_mc.showBoexli(content.getId() != Content.CONTENT_EMPTY ? Number(content.getId()) : 0);				// interval loeschen				clearInterval(interval);							};			// nach pause anzeigen			interval = setInterval(doShow, 25, boexli_mc);						// einfarben//			this.content_txt.textColor = color;		}		}