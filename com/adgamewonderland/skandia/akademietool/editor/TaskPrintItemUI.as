	field.text = answer.answer;			// fett, wenn als korrekt markiert			if (answer.correct == 1) {				// format				var tf:TextFormat = new TextFormat();				// fett				tf.bold = true;				// formatieren				field.setTextFormat(tf);			}		}		// erlaeuterung		explanation_txt.text = item["explanation"];		// verbreitern		explanation_txt._width = FIELDWIDTH;	}}