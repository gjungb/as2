tton		preferences_btn.onRelease = function() {			this._parent.myEditorUI.showPreferences();		};		// logout button		logout_btn.onRelease = function() {			this._parent.myEditorUI.logoutUser();		};				// buttons fuer login anzeigen		showButtons("login");	}		public function showButtons(phase:String ):Void	{		// alle buttons ausblenden		for (var i:String in myButtons) myButtons[i]._visible = false;		// buttons fuer uebergebene phase einblenden		for (var j:String in myButtonSets[phase]) myButtons[myButtonSets[phase][j]]._visible = true;	}	} /* end class NavigationUI */