r = COLORS[mode == "over" ? 1 : 0];	}		private function showBubble(mode:String ):Void	{		// frame (1. mouse over || out, 2. antwort ausgewaehlt || nicht ausgewaehlt		var frame:String = "fr" + mode + (myAnswer.checked ? "on" : "off");		// hinspringen		bubble_mc.gotoAndStop(frame);	}	} /* end class AnswerUI */