/** * @author harry */import com.adgamewonderland.eplus.base.tarifberater.beans.AbstractProdukt;import com.adgamewonderland.eplus.base.tarifberater.interfaces.IProdukt;class com.adgamewonderland.eplus.base.tarifberater.beans.BeraterTarif extends AbstractProdukt {		public static var MEINBASE:String = "452";		public static var MEINBASEPREPAID:String = "456";		public static var SAPNUMMER_DEFAULT = "SIMGERAET";		public static var SAPNUMMER_MICRO = "MICROSIM";		private static var _init : Boolean = initProdukte();		public function BeraterTarif(aId : String, aName : String, aZusatztext : String, aPreiseinmalig : Number, aStreichpreiseinmalig : Number, aPreismonatlich : Number, aStreichpreismonatlich : Number, aVisible : Boolean, aInfos : Boolean, aStep : String, aSapnummer : String) {		super(aId, aName, aZusatztext, aPreiseinmalig, aStreichpreiseinmalig, aPreismonatlich, aStreichpreismonatlich, aVisible, aInfos, aStep);		// sap nummer (sim karte)		this.sapnummer = aSapnummer;	}		public function clone() : IProdukt {		return new BeraterTarif(this.getId(), this.getName(), this.getZusatztext(), this.getPreiseinmalig(), this.getStreichpreiseinmalig(), this.getPreismonatlich(), this.getStreichpreismonatlich(), this.getVisible(), this.getInfos(), this.getStep(), this.getSapnummer());	}	/**	 * Initialisiert alle Tarife mit statischen Werten	 * TODO: Auslagern in XML oder Einladen über Webservice	 */	 private static function initProdukte() : Boolean {	 	// tarif als produkt	 	var tarif : BeraterTarif;		// Mein BASE		tarif = new BeraterTarif(BeraterTarif.MEINBASE, "Mein BASE", "", 0, null, 0, null, false, false, "1.1", SAPNUMMER_DEFAULT);		// als deafult sim		tarif.setSapnummer(BeraterTarif.SAPNUMMER_DEFAULT);		produkte.put(BeraterTarif.MEINBASE, tarif);		// Mein BASE Prepaid		tarif = new BeraterTarif(BeraterTarif.MEINBASEPREPAID, "Mein BASE Prepaid", "", 0, null, 0, null, false, false, "1.2", SAPNUMMER_DEFAULT);		// als deafult sim		tarif.setSapnummer(BeraterTarif.SAPNUMMER_DEFAULT);		produkte.put(BeraterTarif.MEINBASEPREPAID, tarif);				// erfolgreich		return true;	}}