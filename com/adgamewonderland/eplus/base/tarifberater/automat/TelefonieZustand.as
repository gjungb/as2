import com.adgamewonderland.eplus.base.tarifberater.beans.AbstractProdukt;import com.adgamewonderland.eplus.base.tarifberater.automat.AbstractZustand;import com.adgamewonderland.eplus.base.tarifberater.automat.TarifberaterAutomat;import com.adgamewonderland.eplus.base.tarifberater.beans.Antwort;import com.adgamewonderland.eplus.base.tarifberater.beans.BeraterTarifOption;import com.adgamewonderland.eplus.base.tarifberater.beans.BeraterTelefonie;import com.adgamewonderland.eplus.base.tarifberater.beans.Frage;import com.adgamewonderland.eplus.base.tarifberater.interfaces.IProdukt;import com.adgamewonderland.eplus.base.tarifberater.interfaces.IZustand;class com.adgamewonderland.eplus.base.tarifberater.automat.TelefonieZustand extends AbstractZustand {		public function TelefonieZustand(aAutomat : TarifberaterAutomat ) {		super(aAutomat);		// id		this.id = "TelefonieZustand";		// fortschritt		this.fortschritt = 2;		// frage		this.frage = new Frage("Ich telefoniere mit dem Handy...");		this.frage.addAntwort(new Antwort("AntwortUI", "BeraterTelefonie", BeraterTelefonie.TELEFONIE_BASE_EPLUS, "überwiegend zu \nBASE und E-Plus", "2.1"));		this.frage.addAntwort(new Antwort("AntwortUI", "BeraterTarifOption", BeraterTarifOption.FESTNETZ_FLAT, "überwiegend \nins Festnetz", "2.2"));		this.frage.addAntwort(new Antwort("AntwortUI", "BeraterTelefonie", BeraterTelefonie.TELEFONIE_BASE_EPLUS_FESTNETZ, "überwiegend zu BASE, \nE-Plus und ins Festnetz", "2.3"));		this.frage.addAntwort(new Antwort("AntwortUI", "BeraterTelefonie", BeraterTelefonie.TELEFONIE_ALLE, "in alle Handynetze und \nins Festnetz", "2.4"));	}		public function produktWaehlen(aProdukt : IProdukt) : Void {		// zu empfehlende tarifoption		var tarifoption : IProdukt = AbstractProdukt.getProdukt(BeraterTarifOption.DUMMY_OPTION);		// naechster zustand		var zustand : IZustand = this.automat.getFehlerZustand();		// je nach produkt muss andere tarifoption und anderer zustand gewaehlt werden		switch (aProdukt.getId()) {			// base und eplus			case BeraterTelefonie.TELEFONIE_BASE_EPLUS :				// auswahl wie viele minuten am tag				zustand = this.automat.getTelefonieDauerZustand();								break;							// festnetz			case BeraterTarifOption.FESTNETZ_FLAT :				// festnetz flat				tarifoption = aProdukt;				// sichtbar				tarifoption.setVisible(true);				// tarifoption hinzufuegen				this.automat.getBerater().addProdukt(tarifoption);				// auswahl welche allnet flat				zustand = this.automat.getAllnetZustand32();							break;						// base, eplus und festnetz			case BeraterTelefonie.TELEFONIE_BASE_EPLUS_FESTNETZ :				// base flat				tarifoption = AbstractProdukt.getProdukt(BeraterTarifOption.BASE_FLAT);				// sichtbar				tarifoption.setVisible(true);				// tarifoption hinzufuegen				this.automat.getBerater().addProdukt(tarifoption);				// festnetz flat				tarifoption = AbstractProdukt.getProdukt(BeraterTarifOption.FESTNETZ_FLAT);				// sichtbar				tarifoption.setVisible(true);				// tarifoption hinzufuegen				this.automat.getBerater().addProdukt(tarifoption);				// auswahl welche allnet flat				zustand = this.automat.getAllnetZustand31();							break;							// alle netze			case BeraterTelefonie.TELEFONIE_ALLE :				// auswahl welche allnet flat				zustand = this.automat.getAllnetZustand24();												break;		}		// naechster zustand		this.automat.setZustand(zustand);	}		public function warenkorbBestellenMoeglich() : Boolean {		// nicht moeglich, zu bestellen		return false;	}		public function neuStartenMoeglich() : Boolean {		// nicht moeglich, neu zu starten		return false;	}		public function toString() : String {		return "com.adgamewonderland.eplus.base.tarifberater.automat.TelefonieZustand";	}}