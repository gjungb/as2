import com.adgamewonderland.eplus.base.tarifberater.automat.AbstractZustand;import com.adgamewonderland.eplus.base.tarifberater.automat.TarifberaterAutomat;import com.adgamewonderland.eplus.base.tarifberater.beans.Antwort;import com.adgamewonderland.eplus.base.tarifberater.beans.BeraterTarifOption;import com.adgamewonderland.eplus.base.tarifberater.beans.Frage;import com.adgamewonderland.eplus.base.tarifberater.interfaces.IProdukt;import com.adgamewonderland.eplus.base.tarifberater.interfaces.IZustand;/** * @author gerd */class com.adgamewonderland.eplus.base.tarifberater.automat.HandyInternetFlatrateZustand extends AbstractZustand {		public function HandyInternetFlatrateZustand(aAutomat : TarifberaterAutomat) {		super(aAutomat);		// id		this.id = "HandyInternetFlatrateZustand";		// fortschritt		this.fortschritt = 7;		// frage		this.frage = new Frage("Welche Aussage trifft am ehesten auf Sie zu?");		this.frage.addAntwort(new Antwort("AntwortUI", "BeraterTarifOption", BeraterTarifOption.INTERNET_FLAT_S, "ich will selten ins mobile Internet", "5.2.1"));		this.frage.addAntwort(new Antwort("AntwortUI", "BeraterTarifOption", BeraterTarifOption.INTERNET_FLAT, "ich gehe mit dem Smartphone ins Internet", "5.2.2"));		this.frage.addAntwort(new Antwort("AntwortUI", "BeraterTarifOption", BeraterTarifOption.INTERNET_FLAT_L, "ich surfe viel mit dem Smartphone", "5.2.3"));	}	public function produktWaehlen(aProdukt : IProdukt) : Void {		// gewaehltes produkt		var produkt : IProdukt = aProdukt;		// sichtbar machen		produkt.setVisible(true);		// tarifoption hinzufuegen		this.automat.getBerater().addProdukt(produkt);		// naechster zustand		var zustand : IZustand = this.automat.getFertigZustand();		// naechster zustand		this.automat.setZustand(zustand);	}	public function toString() : String {		return "com.adgamewonderland.eplus.base.tarifberater.automat.HandyInternetFlatrateZustand";	}}