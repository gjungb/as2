class com.adgamewonderland.blaupunkt.dtmracing.ui.ChooserUI extends MovieClip {
	
	public static var MODE_SELECT:Number = 1;
	
	public static var MODE_SHOW:Number = 2;
	
	private var _myMode:Number;
	
	private var myMode:Number;
	
	private var myInterval:Number;
	
	private var myPositionCurrent:Number;
	
	private var myPositionMax:Number;
	
	private var prev_btn:Button;
	
	private var next_btn:Button;
	
	private var headline_txt:TextField;
	
	public function ChooserUI()
	{
		// modus
//		setMode(_myMode);
		// aktuelle position
		myPositionCurrent = 1;
		// maximale position
		myPositionMax = 1;
		// button nach links
		prev_btn.onRelease = function() {
			this._parent.changePosition(-1);
		};
		// button nach rechts
		next_btn.onRelease = function() {
			this._parent.changePosition(1);
		};
		// buttons ausblenden
		prev_btn._visible = next_btn._visible = false;
	}
	
	public function setMode(num:Number ):Void
	{
		// modus
		myMode = num;
		// buttons ein- / ausblenden
		prev_btn._visible = next_btn._visible = (myMode == MODE_SELECT);
		// headline aendern
		initHeadline(myMode);
		// nach pause position aendern
		myInterval = setInterval(this, "initPosition", 200, myMode);
	}
	
	public function changePosition(dir:Number ):Void
	{
		// neue position
		var pos:Number = myPositionCurrent + dir;
		// testen, ob links raus
		if (pos < 1) pos = myPositionMax;
		// testen, ob rechts raus
		if (pos > myPositionMax) pos = 1;
		// speichern und hinspringen
		setPosition(pos);
	}
	
	public function setPosition(num:Number ):Void
	{
		// aktuelle position
		myPositionCurrent = num;
		// hinspringen
		gotoAndPlay("fr" + myPositionCurrent);
		// callback
		onChangePosition();
	}
	
	private function initHeadline(mode:Number ):Void {}
	
	private function initPosition(mode:Number ):Void {}
	
	private function onChangePosition():Void {}
	
}