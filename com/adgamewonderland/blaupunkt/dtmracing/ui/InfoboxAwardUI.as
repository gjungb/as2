import com.adgamewonderland.agw.util.*;

import com.adgamewonderland.blaupunkt.dtmracing.challenge.*;

import com.adgamewonderland.blaupunkt.dtmracing.ui.*;

class com.adgamewonderland.blaupunkt.dtmracing.ui.InfoboxAwardUI extends InfoboxUI {

	private var winloose_txt:TextField;

	private var racetime_txt:TextField;
	
	private var back_btn:Button;
	
	private var replay_btn:Button;
	
	public function InfoboxAwardUI()
	{
		// vererbung
		super.constructor.apply(super, arguments);
		// button zurueck
	 	back_btn.onRelease = function () {
	 		this._parent._parent.stopAward();
	 	};
	 	// button replay
	 	replay_btn.onRelease = function () {
	 		this._parent._parent.loadReplays();
	 	};
	}
	
	public function initInfobox(winloose:String, racetime:String ):Void
	{
		// gewonnen oder verloren
		winloose_txt.autoSize = "center";
		winloose_txt.text = winloose;
		// zeitdifferenz
		racetime_txt.autoSize = "center";
		racetime_txt.text = racetime;
		
		// abspielen
		play();
	}
}