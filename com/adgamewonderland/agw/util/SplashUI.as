import com.adgamewonderland.agw.util.*;

class com.adgamewonderland.agw.util.SplashUI extends MovieClip {
	
	private var myGameUI:Playable;
	
	private var start_btn:Button;
	
	private var highscore_btn:Button;
	
	private var instructions_btn:Button;
	
	public function SplashUI()
	{
		// spiel-controller
		myGameUI = null;
		// button start
		start_btn.onRelease = function() {
			this._parent.onPressStart();
		};
		// button highscore
		highscore_btn.onRelease = function() {
			this._parent.onPressHighscore();
		};
		// button anleitung
		instructions_btn.onRelease = function() {
			this._parent.onPressInstructions();
		};
	}
	
	public function registerGame(mc:Playable ):Void
	{
		// spiel-controller
		myGameUI = mc;
	}
	
	public function onPressStart():Void
	{
		// spiel starten
		myGameUI.startGame();
	}
	
	public function onPressHighscore():Void
	{
		// highscore anzeigen
		myGameUI.showHighscore(false, 0);
	}
	
	public function onPressInstructions():Void
	{
		// anleitung anzeigen
		myGameUI.showInstructions(true);
	}
}