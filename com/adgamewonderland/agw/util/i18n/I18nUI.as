import com.adgamewonderland.agw.util.i18n.*;

class com.adgamewonderland.agw.util.i18n.I18nUI extends MovieClip implements I18nListener {
	
	public function I18nUI() {
		// als listener registrieren
		I18nController.getInstance().addListener(this);
		// aktuelle sprache setzen
		onLanguageChanged(I18nController.getInstance().getLanguage());
	}
	
	public function onLanguageChanged(language:Language ):Void
	{
		// frame
		var frame:String;
		// je nach sprache
		switch (language.getLanguage()) {
			case Language.GERMAN :
				frame = "frDe";
				break;
			case Language.ENGLISH :
				frame = "frEn";
				break;
			default :
				frame = "frDe";
		}
		// hinspringen
		gotoAndStop(frame);
	}
	
	private function onUnload():Void
	{
		// als listener deregistrieren
		I18nController.getInstance().removeListener(this);
	}
}