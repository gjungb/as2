import com.adgamewonderland.agw.util.*;


class com.adgamewonderland.agw.racing.vehicle.CounterUI extends MovieClip {
	
	private var time_txt:TextField;
	
	private var laps_txt:TextField;
	
	private var laptime_txt:TextField;
	
	private var tdiff_txt:TextField;
	
	public function CounterUI() {
		// zeitanzeige linksbuendig
		time_txt.autoSize = "left";
		// rundenanzeige zentriert
		laps_txt.autoSize = "center";
		// rundenzeit linksbuendig
		laptime_txt.autoSize = "left";
		// zeitdifferenz linksbuendig
		tdiff_txt.autoSize = "left";
	}
	
	public function showTime(ms:Number ):Void
	{
//		// anzeigen
		time_txt.text = TimeFormater.getMinutesSecondsMilliseconds(ms);
	}
	
	public function showLap(current:Number, max:Number ):Void
	{
		// anzeigen
		laps_txt.text = String(current) + "/" + String(max);
	}
	
	public function showLaptime(laptime:String, tdiff:String ) {
		// rundenzeit
		laptime_txt.text = laptime;
		// zeitdifferenz
		tdiff_txt.text = tdiff;
	}
}