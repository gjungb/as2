rfolgen		this.onEnterFrame = function () {			// prozent vergangene zeit			var percent:Number = Math.round((getTimer() - starttime) / time * 100);			// balken skalieren (wird nach rechts kleiner)			time_mc._xscale = - (100 - percent);			// bei 100 aufhoeren			if (percent >= 100) {				// text aendern				time_txt.text = "";				// zeitbalken ausblenden				time_mc._visible = false;				// anzahl buecher einblenden				remaining_txt._visible = true;				// ende				delete (onEnterFrame);			}		}	}} /* end class Display */